<%= tag.tr id: dom_id(player), class: "bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100" do %>
  <td class="py-3 px-6 text-center"><%= player.name %></td>
  <td class="py-3 px-6 text-center">
    <span class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs"><%= player.seasons %></span>
  </td>
  <td class="py-3 px-6 text-center"><%= player.team.name %></td>
  <td class="py-3 px-6 text-center">
    <div class="flex item-center justify-center">
        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
            <%= link_to player_path(player), data: { turbo_frame: "modal" } do %>
                <%= inline_svg_tag('svg/eye') %>
            <% end %>
        </div>
        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
            <%= link_to edit_player_path(player), data: { turbo_frame: 'modal' }  do %>
              <%= inline_svg_tag("svg/edit") %>
            <% end %>
        </div>
        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
          <%= link_to disable_modal_player_path(player), data: { turbo_frame: 'modal' }  do %>
            <%= inline_svg_tag("svg/trash") %>
          <% end %>
        </div>
    </div>
  </td>
<% end %>
